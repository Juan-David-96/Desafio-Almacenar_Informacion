<h1>Series#new</h1>
<p>Find me in app/views/series/new.html.erb</p>

<%= form_with model: @serie, method: :post do |form| %>
  <div class="col-4">
    <div>
      <%= form.label :name, "Nombre Serie", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div>
      <%= form.label :synopsis, "Sinopsis", class: "form-label" %>
      <%= form.text_area :synopsis, class: "form-control" %>
    </div>
    <div>
      <%= form.label :director, "Director", class: "form-label" %>
      <%= form.text_field :director, class: "form-control" %>
    </div>
    <div>
      <%= form.submit "Crear Serie", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>





